<fieldset>
	<% fields_for(@metadata) do |m| %>
    <%= m.error_messages %>
    <p><%= m.label :uri %> <%= m.text_field :uri %></p>
    <p><%= m.label :type %> <%= m.text_field :type %></p>
    <p><%= m.label :keywords %><br/> <%= m.text_area :keywords, :rows => 3 %></p>
    <p><%= m.label :creator_organization_id, 'Creator' %> <%= m.select :creator_organization_id, Organization::NAMES_IDS, :include_blank => true %></p>
    <p><%= m.label :maintainer_organization_id %> <%= m.select :maintainer_organization_id, Organization::NAMES_IDS, :include_blank => true %></p>
    <p><%= m.label :publisher_organization_id %> <%= m.select :publisher_organization_id, Organization::NAMES_IDS, :include_blank => true %></p>
    <p class="date"><%= m.label :beginning_date %><br/> <%= m.date_select :beginning_date %></p>
    <p class="date"><%= m.label :ending_date %><br/> <%= m.date_select :ending_date %></p>
    <p><%= m.label :language %> <%= m.text_field :language %></p>
    <p><%= m.label :conforms_to %> <%= m.text_field :conforms_to %></p>
    <p><%= m.label :geographic_coverage %> <%= m.text_field :geographic_coverage %></p>

    <p class="date"><%= m.label :created_date %> <%= m.date_select :created_date %></p>
    <p class="date"><%= m.label :last_updated %> <%= m.date_select :last_updated %></p>

    <p><%= m.label :rights %><br/> <%= m.text_area :rights, :rows => 3 %></p>
    <p><%= m.label :description %><br/> <%= m.text_area :description, :rows => 3 %></p>
	<% end %>
</fieldset>
