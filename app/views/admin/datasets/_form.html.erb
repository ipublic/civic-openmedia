<div id="forms">
	<% form_for([:admin, @dataset]) do |f| %>
		<div class="grid_6">
			<div class="box">
				<h2><%= @dataset.title || "New Dataset" %></h2>
				<div class="block">
				  <%= f.error_messages %>
					<%= f.hidden_field :rev, :value => @dataset['_rev'] if @dataset['_rev'] %>
					<% @dataset.metadata ||= Metadata.new %>
					
					<fieldset>
					  <p><%= f.label :title, 'Dataset title' %> <%= f.text_field :title %></p>
						<p><%= f.label :catalog_id, 'Catalog' %> <%= f.select :catalog_id, catalog_collection, {:prompt => 'Select Catalog'}  %></p>
						<%= render :partial => 'physical/metadatas/form', :locals => { :metadata => @metadata } %>
					</fieldset>
				</div>
			</div>
			<p>
				<%= link_to 'Back',  [:admin, @dataset] %>
				<%= f.submit "Submit", :class => "buttonSubmit", :style => "float: right;"%><br/>
			</p>
		</div>
	<% end %>	
</div>
