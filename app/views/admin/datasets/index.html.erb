<% title "Datasets" %>
<div class="grid_12" >
	<p style="float:right;">
		<%= link_to 'New Dataset', new_admin_dataset_path %> |
		<%= link_to 'Publish', new_admin_dataset_path %>
	</p>
	<hr/>
</div>
<div class="grid_12">
	<p>Something here about role of Datasets in system</p>
	<div class="box">
		<h2>Datasets List</h2>
		<div class="block" id="tables">
			<table>
				<thead>
				<tr>
					<th>Catalog</th>
					<th>Title</th>
					<th>Description</th>
					<th>Updated</th>
				</tr>
				</thead>
				<% unless @datasets.nil? %>
					<% @datasets.each do |ds| %>
						<% @cat = Catalog.get(ds.catalog_id) %>
					  <tr>
							<td><% if !@cat.nil? %> <%= link_to @cat.title, [:admin, @cat] %> <% end %></td>
							<td><%= link_to ds.title, [:admin, ds] %></td>
							<td><%= ds.metadata['description'] %></td>
							<td><%= ds.updated_at.to_s(:full) %></td>
					  </tr>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>