<% title "Datasets" %>
<div class="grid_12" >
	<p style="float:right;">
		<%= link_to 'List all', admin_datasets_path %> | 
		<%= link_to "Edit", edit_admin_dataset_path(@dataset) %> | 
		<%= link_to 'Delete', [:admin, @dataset], 
						:confirm => "Are you sure you want to delete #{@dataset.title} dataset?", 
						:method => :delete %>
		</p>
	<hr />
</div>
<div class="grid_3">
	<div class="box">
		<h2>Dataset: <%= @dataset.title %> </h2>
		<div class="block">
			<p><b>URI:</b> <%= @dataset.uri %></p>
			<%= render :partial => 'physical/metadatas/show', :locals => {:subject => @dataset} %>
		</div>
	</div>
</div>
<% unless @dataset.properties.nil? %>
	<%= render :partial => 'admin/property_definitions/list_properties', :locals => {:properties => @dataset.properties}  %>
<% end %>
