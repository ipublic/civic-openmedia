<% title "Catalogs" %>
<div class="grid_12" >
	<p style="float:right;"><%= link_to "List all", admin_catalogs_path %> | <%= link_to "Edit", edit_admin_catalog_path(@catalog) %> |
		<%= link_to 'Delete', [:admin, @catalog], 
					:confirm => "Are you sure you want to delete this catalog: #{@catalog.title}?", 
					:method => :delete %>
		</p>
	<hr />
</div>
<div class="grid_3">
	<div class="box">
		<h2><%= @catalog.title %> Data Catalog</h2>
		<div class="block">
			<p><b>Description:</b> <br/><%= @catalog.description %></p>
			<%= render :partial => 'physical/metadatas/show', :locals => {:metadata => @catalog.metadata } %>
		</div>
	</div>
</div>

<div class="grid_9">
	<div class="box" id="tables">
		<h2>Data Sets</h2>
		<div class="block">
			<table>
				<thead>
					<tr>
						<th>Title</th>
						<th>Creator Agency</th>
						<th>JSON</th>
						<th>CSV</th>
						<th>XML</th>
					</tr>
				</thead>
				<% @catalog.catalog_records.each do |cr| %>
					<% ds = Dataset.get(cr['dataset_id']) %>
					<% unless ds.nil? %>
						<tr>
							<td><%= link_to ds.title, ds %> </td>
							<td>Link to source Agency</td>
							<% cr.formats.each do |format| %>
								<td>
									link_to format X
								</td>
							<% end %>
						</tr>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>

