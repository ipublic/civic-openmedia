<div id="forms">
	<% form_for([:admin, @organization]) do |f| %>
		<div class="grid_6">
			<div class="box">
				<h2><%= @organization.name || "New Organization" %></h2>
				<div class="block">
				  <%= f.error_messages %>
					<%= f.hidden_field :rev, :value => @organization['_rev'] if @organization['_rev'] %>
					<fieldset>
					  <p><%= f.label :name, 'Organization name' %> <%= f.text_field :name %></p>
					  <p><%= f.label :abbreviation, 'Organization abbreviation' %> <%= f.text_field :abbreviation %></p>
					  <p><%= f.label :website_url, 'Website URL'  %> <%= f.text_field :website_url %></p>
					    <p><%= f.label :description, 'Organization Description' %><br/> <%= f.text_area :description, :rows => 3 %></p>
					</fieldset>
					<%= render :partial => 'addresses/form', :locals => { :address => @organization.addresses } %>
				</div>
			</div>
			<p>
				<%= link_to 'Back', admin_organizations_path %>
				<%= f.submit "Submit", :class => "buttonSubmit", :style => "float: right;"%><br/>
			</p>
		</div>

		<div class="grid_6">
			<div class="box">
				<h2>Point of Contact</h2>
				<div class="block" id="forms">
					<%= render :partial => 'contact' %>
				</div>
			</div>
		</div>
	<% end %>	
</div>
