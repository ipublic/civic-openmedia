<div id="forms">
	<div class="grid_12">
		<div class="box">
			<h2><%= @content_document.title || "New Content Document" %></h2>
		</div>
	</div>
	<div class="clear"></div>
	<% form_for([:admin, @content_document]) do |f| %>
		<div class="grid_6">
			<div class="box">
				  <%= f.error_messages %>
					<%= f.hidden_field :rev, :value => @content_document['_rev'] if @content_document['_rev'] %>
					<fieldset>
						<h5>General</h5>
				  	<p><%= f.label :title %> <%= f.text_field :title %></p>
						<%= render :partial => 'physical/metadatas/form', :locals => { :metadata => @metadata } %>
				</fieldset>
			</div>
		</div>
		<div class="grid_6">
			<div class="box">
				<fieldset>
				<h5>Properties</h5>
				<div id="property-definitions">
					<%= render( :partial => 'admin/property_definitions/form', 
											:collection => @content_document.properties,
											:spacer_template => "admin/property_definitions/spacer") %>
				</div>
				</fieldset>
			</div>
		</div>
		<p>
			<%= link_to 'Back', admin_content_documents_path %>
			<%= f.submit "Submit", :class => "buttonSubmit", :style => "float: right;"%><br/>
		</p>
	<% end %>	
</div>
