<div id="forms">
	<% form_for(@catalog) do |f| %>
		<div class="grid_6">
			<div class="box">
				<h2><%= @catalog.title || "New Catalog" %></h2>
				<div class="block">
				  <%= f.error_messages %>
					<%= f.hidden_field :rev, :value => @catalog['_rev'] if @catalog['_rev'] %>
					<% @catalog.metadata ||= Metadata.new %>
					
					<fieldset>
					  <p><%= f.label :title, 'Catalog title' %> <%= f.text_field :title %></p>
				    <p><%= f.label :description %><br/> <%= f.text_area :description, :rows => 3 %></p>
					</fieldset>
					<%= render :partial => 'physical/metadatas/form', :locals => { :metadata => @metadata } %>
				</div>
			</div>
			<p>
				<%= link_to 'Back', catalogs_path %>
				<%= f.submit "Submit", :class => "buttonSubmit", :style => "float: right;"%><br/>
			</p>
		</div>
	<% end %>	
</div>
