<% title "Catalog" %>
<div class="grid_12">
	<div class="box">
		<h2><%= @catalog.title %> Data Catalog</h2>
		<div class="block">
			<p><%= @catalog.description %></p>
			<p><b>URI:</b> <%= @catalog.metadata.uri %></p>
			<p><b>Geographic coverage:</b> <%= @catalog.metadata.geographic_coverage %></p>
			<p><b>Conforms to:</b> <%= @catalog.metadata.conforms_to %></p>
			<p><b>Creator agency:</b> <%= @catalog.metadata.creator_organization_id %></p>
			<p><b>Beginning date:</b> <%= @catalog.metadata["beginning_date(1i)"] %></p>
			<p><b>Ending date:</b> <%= @catalog.metadata["ending_date(1i)"] %></p>
			<p><b>Rights:</b> <%= @catalog.metadata["rights"] %></p>
			<p><b>Language:</b> <%= @catalog.metadata["language"] %></p>
			<p><b>Type:</b> <%= @catalog.metadata["type"] %></p>
			<p><b>Keywords:</b> <%= @catalog.metadata["keywords"] %></p>
		</div>
	</div>
</div>

<div class="grid_6">
	<div class="box">
		<div class="block">
			<p>Header stuff about the catalog up here</p>
			<p>Include Search functions</p>
			<p>Include filter by date functions</p>
		</div>
	</div>
</div>

<div class="grid_6" >
	<div class="box">
	</div>
</div>

<div class="grid_12">
	<div class="box" id="tables">
		<h2>Table Header</h2>
		<div class="block">
			<table>
				<tr>
					<th>Title</th>
					<th>Creator Agency</th>
					<th>JSON</th>
					<th>CSV</th>
					<th>XML</th>
				</tr>
				<% @catalog_records.each do |record| %>
					<tr>
						<td><%= link_to record.dataset_id, record %> </td>
						<td>Link to source Agency</td>
						<% record.formats.each do |format| %>
							<td>
								link_to format X
							</td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
	<p><%= link_to "Back", catalogs_path %> | <%= link_to "Edit", edit_catalog_path(@catalog) %></p>
	
</div>
