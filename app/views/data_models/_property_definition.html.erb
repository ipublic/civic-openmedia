	<% fields_for :property_definitions, property_definition do |p| %>
		<p><%= p.label :name %> <%= p.text_field :name %></p>
		<p><%= p.label :alias_name %> <%= p.text_field :alias_name %></p>
		<p><%= p.label :data_type %> <%= p.text_field :data_type %></p>
		<p><%= p.label :default_value %> <%= p.text_field :default_value %></p>
		<p><%= p.label :ordinal_position %> <%= p.text_field :ordinal_position %></p>
